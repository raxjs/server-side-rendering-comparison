class {
  onCreate() {
    this.state = {
      title: 'Marko Banner'
    };
  }
  onBannerClick(title) {
    alert('click banner:' + title);
  }
}

<div class="container">
  <h2>${state.title}</h2>
  <div class="list">
    <for|idx, item| in=data.items>
      <div class="item" on-click('onBannerClick', item.title)>
        <img src=item.img class="itemImg" />
      </div>
    </for>
  </div>
</div>
